ge.vue'\nexport default {\n    data(){\n        return {\n            list:[],\n            itemclass:[]\n        }\n    },\n    components:{\n        message\n    },\n    created(){\n        this.loadMsg();\n    },\n    methods:{\n        loadMsg(){\n            var url = \"msgs\";\n            // 发送ajax请求\n            this.axios.get(url).then(result=>{\n                this.list = result.data.data;\n                for(var i=0;i<this.list.length;i++){\n                    this.list[i].id=i\n                }\n                // console.log(this.list);\n            })\n        },\n        clickItem(n){\n            // console.log(n);\n            // 创建一个长度为n的空数组，作为每次点击重新创建\n            this.itemclass=new Array(n+1);\n            // console.log(this.itemclass)\n            // 每次单击获得的n-1与<message>遍历中的i一致\n            // 在数组n-1位置添加{itembg:true}\n            this.itemclass.splice(n,1,{itembg:true});\n            setTimeout(()=>{\n                this.itemclass.splice(n,1,{itembg:false});\n            },1000);\n        }\n    },\n}\n</script>\n\n<style scoped>\n    .itemStyle{\n        padding:5px;\n        border-bottom:1px solid #d9d9d9;\n    }\n    .itembg{\n        background-color:rgba(0,0,0,.1);\n    }\n</style>\n"]}]}